<% layout("layout") -%>

<!-- Home -->
<article id="top" class="wrapper style1">
	<div class="container">
		<div class="row">
			<div class="col-4 col-5-large col-12-medium">
				<img src="/public/images/<%=el.image%>" class="circle" alt="" /></span>
			</div>
			<div class="col-8 col-7-large col-12-medium">
				<header>
					<!--<h1>"저를 따뜻하게 맞아주세요."</h1>-->
					<!--<p>갈 곳 잃은 저에게 따뜻한 손길을 주세요</p>-->
				</header>
				<!--<%=JSON.stringify(el)%>-->
				<table class="animal">
					<tr>
						<th class="celltitle">접수일</th>
						<td><%=el.receptday%></td>
					</tr>
					<tr>
						<th class="celltitle">품종</th>
						<td><%=el.race%></td>
					</tr>
					<tr>
						<th class="celltitle">성별</th>
						<td><%=el.gender%></td>
					</tr>
					<tr>
						<th class="celltitle">나이/체중</th>
						<td><%=el.birthNweight%></td>
					</tr>
					<tr>
						<th class="celltitle">발견장소</th>
						<td><%=el.place%></td>
					</tr>
					<tr>
						<th class="celltitle">중성화</th>
						<% if (el.neutralize == 0) { %>
							<td><%="아니오"%></td>
						<% } else { %>
							<td><%="네"%></td>
						<% } %>							
					</tr>
					<tr>
						<th class="celltitle">특징</th>
						<td><%=el.feature%></td>
					</tr>
					<tr>
						<th class="celltitle">관할기관</th>
						<td><%=el.juris%></td>
					</tr>
					<tr>
						<th class="celltitle">상태</th>
						<td><%=el.state%></td>
					</tr>
					<tr>
						<th class="celltitle">보호센터</th>
						<td><%=el.centername%></td>
					</tr>
					<tr>
						<th class="celltitle">연락처</th>
						<td><%=el.centerphone%></td>
					</tr>
					<tr>
						<th class="celltitle">보호장소</th>
						<td><%=el.centeraddress%></td>
					</tr>
					
				</table>
				<a href="/apply/<%=el.id%>" class="button large scrolly">입양신청하기</a>
			</div>
		</div>
		<!--<footer>-->
		<!--	<p class="italic">여러분의 손으로 이 아이들에게 희망을 주시지 않겠습니까?</p>-->
		<!--	<a href="#portfolio" class="button large scrolly">유기동물 공고 보기</a>-->
		<!--</footer>-->
	</div>
</article>